@model Category

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-6 col-lg-5">

            <div class="card shadow-sm border-0 rounded-4">

                <!-- Header -->
                <div class="card-header bg-danger text-white rounded-top-4 text-center">
                    <h4 class="mb-0">
                        <i class="bi bi-exclamation-triangle-fill me-2"></i>
                        Xóa thể loại
                    </h4>
                </div>

                <!-- Body -->
                <div class="card-body p-4">
                    <form method="post">

                        <div class="mb-3">
                            <label asp-for="Name" class="form-label fw-semibold"></label>
                            <input asp-for="Name" class="form-control" readonly />
                        </div>

                        <div class="mb-3">
                            <label asp-for="DisplayOrder" class="form-label fw-semibold"></label>
                            <input asp-for="DisplayOrder" class="form-control" readonly />
                        </div>

                        <!-- Warning -->
                        <div class="alert alert-warning d-flex align-items-center mt-3" role="alert">
                            <i class="bi bi-exclamation-circle-fill me-2 fs-5"></i>
                            <span>
                                Bạn có chắc chắn muốn <strong>xóa thể loại này</strong>?
                                Hành động này <strong>không thể hoàn tác</strong>.
                            </span>
                        </div>

                        <!-- Buttons -->
                        <div class="d-flex gap-2 mt-3">
                            <button type="submit" class="btn btn-danger fw-semibold flex-fill">
                                <i class="bi bi-trash-fill me-1"></i>
                                Xóa
                            </button>

                            <a asp-controller="Category"
                               asp-action="Index"
                               class="btn btn-outline-secondary flex-fill">
                                <i class="bi bi-arrow-left-circle me-1"></i>
                                Quay lại
                            </a>
                        </div>

                    </form>
                </div>

            </div>

        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
